<h1>Rounds played by <%= @golfer.name %></h1>

<p id="notice"><%= notice %></p>

<table style='width: 55%'>
  <thead>
    <tr>
      <th align="left"><strong>Golf Course</strong></th>
      <th align="left"><strong>Score</strong></th>
      <th align="left"><strong>Over/Under</strong></th>
      <th align="left"></th>
    </tr>
  </thead>

  <tbody>
    <% @golfer.rounds.each do |round| %>
      <tr>
        <td><%= round.golf_course.name %></td>
        <td><%= round.score %></td>
        <td><%= round.display_from_par %></td>
        <td><%= link_to 'edit round', edit_golfer_round_path(@golfer, round) if current_golfer == @golfer %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>

<%= button_to 'Enter New Round', new_golfer_round_path(@golfer), method: 'get' if current_golfer == @golfer %>
