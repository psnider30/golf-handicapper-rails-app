<h1>Golfers</h1>

<table style='width: 65%'>
  <thead>
    <tr>
      <th align="left"><strong>Name</strong></th>
      <th align="left"><strong>Index</strong></th>
      <th align="center"><strong>Rounds Posted</strong></th>
      <th align="left"><strong>Email</strong></th>

    </tr>
  </thead>

  <tbody>
    <% @golfers.each do |golfer| %>
      <tr>
        <td><%=link_to golfer.name, golfer_path(golfer) %></td>
        <td><%= golfer.golfer_index if golfer.rounds_posted > 0 %></td>
        <td align="center"><%= golfer.rounds_posted %></td>
        <td><%= golfer.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
