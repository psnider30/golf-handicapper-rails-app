
  <p id="notice"><%= notice %></p>

  <h1>Welcome <%= current_golfer.name if current_golfer %></h1>

  <% if logged_in? %>
    <div class= 'group-info'>
      <h4> Golfers in your Group: <%= @golfers.count %></h4>
      <h4>Low Handicap Index: <%= @low_golfer.golfer_index %> for <%= @low_golfer.name %></h4>
      <h4>Low Round: <%= @low_round_gross.display_from_par %> with score of <%= @low_round_gross.score %> at <%= @low_round_gross.golf_course.name %> by <%= @low_round_gross.golfer.name %> </h4>
      <h4>Net Low Round: Score of <%= @low_round_net.score %> and net <%= @low_round_net.net_from_par %> at <%= @low_round_net.golf_course.name %> by <%= @low_round_net.golfer.name %></h4>
      <h4>Easiest Course: <%= @golf_courses.lowest_course_slope.name %> with course slope of <%= @golf_courses.lowest_course_slope.course_slope %></h4>
      <h4>Most Difficult Course: <%= @golf_courses.highest_course_slope.name %> with course slope of <%= @golf_courses.highest_course_slope.course_slope %></h4>
    </div><br>
  <% end %>

  <div class="home-pic">
    <%= image_tag('Cypress-Point-15-water.jpg', class: 'home-pic-img') %>
  </div>
