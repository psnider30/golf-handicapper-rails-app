<h1>Golf Courses</h1>

<table style='width: 42%'>
  <thead>
    <tr>
      <th align="left"><strong>Golf Course</strong></th>
      <th align="left"><strong>Holes</strong></th>
      <th align="left"><strong>Total Par</strong></th>
      <th align="left"></th>
    </tr>
  </thead>
    <% @golf_courses.each do |golf_course| %>
      <tr>
        <td><%= link_to golf_course.name, golf_course_path(golf_course) %></td>
        <td><%= golf_course.holes %></td>
        <td><%= golf_course.total_par %></td>
      </tr>
    <% end %>
  <tbody>
</table><br>

<%= button_to 'Create New Golf Course', new_golf_course_path, method: 'get' %>
